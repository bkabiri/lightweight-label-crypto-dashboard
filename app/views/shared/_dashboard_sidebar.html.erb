<!-- app/views/shared/_dashboard_sidebar.html.erb -->
<aside class="hidden md:block md:w-72 lg:w-80 shrink-0 bg-white">
  <div class="mx-auto max-w-[20rem] p-4">
    <!-- Logo -->
    <%= link_to root_path, class: "flex items-center gap-2 font-semibold text-gray-900" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <circle cx="8" cy="12" r="4"></circle><circle cx="16" cy="12" r="4"></circle>
      </svg>
      <span class="text-lg">tokenlab</span>
    <% end %>

    <!-- Search (no hard borders) -->
    <div class="mt-5">
      <label class="sr-only" for="dash-search">Search</label>
      <div class="flex items-center rounded-xl bg-white px-3 py-2 shadow-sm">
        <svg class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <circle cx="11" cy="11" r="7" stroke-width="1.8"/><path d="M21 21l-4.3-4.3" stroke-width="1.8" stroke-linecap="round"/>
        </svg>
        <input id="dash-search" placeholder="Search"
               class="ml-2 w-full border-0 p-0 text-gray-700 placeholder-gray-400 focus:ring-0" />
        <div class="ml-2 hidden sm:flex items-center gap-1 text-xs text-gray-400">
          <span class="rounded border px-1">⌘</span><span>/</span>
        </div>
      </div>
    </div>

    <!-- Nav -->
    <nav class="mt-5 space-y-2 text-gray-800">
      <!-- Active -->
      <a href="#"
         class="flex items-center gap-3 rounded-xl bg-indigo-600 px-4 py-3 text-white font-semibold shadow-sm">
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <rect x="4" y="4" width="16" height="16" rx="3" ry="3" stroke-width="1.8"/>
          <path d="M9 4v16M4 9h16" stroke-width="1.8"/>
        </svg>
        Dashboard
      </a>

      <!-- Accounts group (no border box) -->
      <details open class="rounded-xl bg-white shadow-sm">
        <summary class="flex cursor-pointer items-center justify-between px-4 py-3 font-semibold">
          <span class="flex items-center gap-3">
            <svg class="h-5 w-5 text-gray-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <rect x="3" y="5" width="18" height="14" rx="2" ry="2" stroke-width="1.8"/>
            </svg>
            Accounts
          </span>
          <svg class="h-4 w-4" viewBox="0 0 20 20" fill="none" stroke="currentColor">
            <path d="M6 8l4 4 4-4" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </summary>
        <div class="px-4 pb-3 space-y-3">
          <a href="#" class="flex items-center gap-3 text-gray-700 hover:text-gray-900">
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <rect x="3" y="5" width="18" height="14" rx="2" ry="2" stroke-width="1.6"/><path d="M7 9h10" stroke-width="1.6"/>
            </svg>
            <span>EVM Accounts</span><span class="ml-1 text-[11px] text-gray-400">♦</span>
          </a>
          <a href="#" class="flex items-center gap-3 text-gray-700 hover:text-gray-900">
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <rect x="3" y="5" width="18" height="14" rx="2" ry="2" stroke-width="1.6"/><path d="M7 9h10" stroke-width="1.6"/>
            </svg>
            Bitcoin Accounts
          </a>
          <a href="#" class="flex items-center gap-3 text-gray-700 hover:text-gray-900">
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <rect x="3" y="5" width="18" height="14" rx="2" ry="2" stroke-width="1.6"/><path d="M7 9h10" stroke-width="1.6"/>
            </svg>
            Substrate Accounts
          </a>
        </div>
      </details>

      <% ["Balances","History","Onchain","Staking","Statistics"].each do |item| %>
        <a href="#" class="flex items-center gap-3 rounded-xl px-4 py-3 hover:bg-gray-50">
          <svg class="h-5 w-5 text-gray-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <circle cx="12" cy="12" r="9" stroke-width="1.6"/>
          </svg>
          <%= item %>
        </a>
      <% end %>
    </nav>
  </div>
</aside>