<%# Minimal, tableless HTML with inline styles for broad client support %>
<div style="background:#f6f7fb;padding:32px 12px;">
  <div style="max-width:560px;margin:0 auto;background:#ffffff;border-radius:14px;box-shadow:0 10px 30px rgba(0,0,0,0.08);padding:28px;">
    <!-- Brand -->
    <div style="text-align:center;margin-bottom:16px;">
      <span style="display:inline-flex;align-items:center;gap:8px;color:#0f172a;font-weight:600;font-size:20px;">
        <!-- inline logo -->
        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="#0f172a" role="img" aria-label="utila">
          <circle cx="8" cy="12" r="4"></circle>
          <circle cx="16" cy="12" r="4"></circle>
        </svg>
        tokenlab
      </span>
    </div>

    <h1 style="margin:0 0 8px 0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Inter,Helvetica,Arial,sans-serif;
               font-size:20px;line-height:28px;color:#0f172a;text-align:center;"><%= title %></h1>

    <p style="margin:0 0 20px 0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Inter,Helvetica,Arial,sans-serif;
              font-size:14px;color:#475569;text-align:center;">
      <%= body_html.html_safe %>
    </p>

    <% if cta_text && cta_url %>
      <div style="text-align:center;margin:22px 0 6px;">
        <a href="<%= cta_url %>"
           style="display:inline-block;background:#4F5BFF;color:#ffffff;text-decoration:none;
                  padding:12px 18px;border-radius:10px;font-weight:600;font-size:14px;">
          <%= cta_text %>
        </a>
      </div>
    <% end %>

    <% if footer_html.present? %>
      <div style="margin-top:16px;font-family:system-ui,-apple-system,Segoe UI,Roboto,Inter,Helvetica,Arial,sans-serif;
                  font-size:12px;color:#64748b;text-align:center;">
        <%= footer_html.html_safe %>
      </div>
    <% end %>
  </div>

  <div style="max-width:560px;margin:12px auto 0;text-align:center;color:#94a3b8;font-size:11px;
              font-family:system-ui,-apple-system,Segoe UI,Roboto,Inter,Helvetica,Arial,sans-serif;">
    © <%= Time.current.year %> utila · All rights reserved
  </div>
</div>