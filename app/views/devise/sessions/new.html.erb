<% provide :title, "Log in" %>

<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4 py-12">
  <!-- fixed visual width so it won’t appear tiny -->
  <div class="w-[420px] max-w-full rounded-[14px] bg-white p-8 shadow-[0_10px_30px_rgba(0,0,0,0.08)]">

    <!-- Brand -->
    <div class="mb-6 flex items-center justify-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="currentColor">
        <circle cx="8" cy="12" r="4"></circle>
        <circle cx="16" cy="12" r="4"></circle>
      </svg>
      <span class="text-[22px] font-semibold text-gray-900">tokenlab</span>
    </div>

    <h1 class="text-center text-[20px] font-semibold text-gray-900">Welcome</h1>
    <p class="mt-1 text-center text-[13px] text-gray-500">
      Log in to continue to TokenLab console
    </p>

    <!-- Social buttons (placeholders) -->
    <div class="mt-6 space-y-3">
      <a href="#" class="flex items-center justify-center gap-3 rounded-lg border border-gray-300 px-4 py-2.5 text-[14px] font-medium text-gray-700 hover:bg-gray-50">
        <svg width="16" height="16" viewBox="0 0 48 48" aria-hidden="true">
          <path fill="#FFC107" d="M43.6 20.5H42V20H24v8h11.3A12 12 0 0 1 12 24 12 12 0 0 1 24 12c3.1 0 5.9 1.2 8 3.1l5.7-5.7A20 20 0 1 0 24 44c10.2 0 18.6-7.4 19.9-17v-6.5z"/>
          <path fill="#FF3D00" d="M6.3 14.7 12 19a12 12 0 0 1 20-3.9l5.7-5.7A20 20 0 0 0 6.3 14.7z"/>
          <path fill="#4CAF50" d="M24 44c5.4 0 10.3-2.1 13.9-5.5l-6.4-5.2A12 12 0 0 1 12 24H4a20 20 0 0 0 20 20z"/>
          <path fill="#1976D2" d="M43.6 20.5H42V20H24v8h11.3c-1.6 4.7-6 8-11.3 8v8c10.2 0 18.6-7.4 19.9-17z"/>
        </svg>
        Continue with Google
      </a>

      <a href="#" class="flex items-center justify-center gap-3 rounded-lg border border-gray-300 px-4 py-2.5 text-[14px] font-medium text-gray-700 hover:bg-gray-50">
        <svg width="16" height="16" viewBox="0 0 24 24" aria-hidden="true" fill="currentColor">
          <path d="M16.365 1.43c0 1.14-.47 2.23-1.3 3.05-.82.83-2.05 1.45-3.25 1.36-.14-1.1.46-2.26 1.27-3.1.87-.95 2.34-1.62 3.28-1.31zM20.9 17.27c-.62 1.46-1.37 2.9-2.46 4.16-1 .98-2.25 2.13-3.76 2.13-1.33 0-1.65-.69-3.45-.69-1.82 0-2.16.69-3.5.69-1.52 0-2.7-1.25-3.7-2.23C2.1 19.83.74 16.74 1.7 13.98c.99-2.92 3.66-4.94 6.71-5.01 1.31-.03 2.55.46 3.44.46.87 0 2.39-.61 4-.52 1.34.05 2.57.38 3.56 1.35-3.2 1.76-2.68 6.25.49 7.01z"/>
        </svg>
        Continue with Apple
      </a>

      <a href="#" class="flex items-center justify-center gap-3 rounded-lg border border-gray-300 px-4 py-2.5 text-[14px] font-medium text-gray-700 hover:bg-gray-50">
        <svg width="16" height="16" viewBox="0 0 23 23" aria-hidden="true">
          <path fill="#f35325" d="M1 1h10v10H1z"/><path fill="#81bc06" d="M12 1h10v10H12z"/><path fill="#05a6f0" d="M1 12h10v10H1z"/><path fill="#ffba08" d="M12 12h10v10H12z"/>
        </svg>
        Continue with Microsoft
      </a>
    </div>

    <div class="my-6 flex items-center gap-3">
      <div class="h-px w-full bg-gray-200"></div>
      <span class="text-[11px] text-gray-400">OR</span>
      <div class="h-px w-full bg-gray-200"></div>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: true }) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, "Email address*", class: "block text-[13px] font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-[14px] text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <div>
          <div class="flex items-center justify-between">
            <%= f.label :password, "Password*", class: "block text-[13px] font-medium text-gray-700" %>
            <% if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-[12px] font-medium text-indigo-600 hover:text-indigo-500" %>
            <% end %>
          </div>
          <%= f.password_field :password, autocomplete: "current-password",
                class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-[14px] text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <label class="flex items-center gap-2">
            <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
            <span class="text-[13px] text-gray-700">Remember me</span>
          </label>
        <% end %>

        <%= f.submit "Continue",
              class: "mt-2 inline-flex w-full items-center justify-center rounded-lg bg-[#4F5BFF] px-4 py-3 text-[14px] font-semibold text-white hover:bg-[#3f49ff] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#4F5BFF]" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-[13px] text-gray-600">
      <span>Don’t have an account?</span>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>