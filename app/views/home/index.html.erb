<%= render "shared/dashboard_topbar" %>

<div class="bg-white">
  <div class="mx-auto max-w-7xl">
    <div class="flex">
      <%= render "shared/dashboard_sidebar" %>

      <!-- Main -->
<main class="min-h-[calc(100vh-3.5rem)] flex-1 p-6 lg:p-8 bg-white">
  <div class="space-y-6"> <!-- this adds vertical separation -->

    <!-- Total Balance -->
    <section class="rounded-2xl bg-white border border-gray-200 shadow-sm hover:shadow-md transition p-6">
      <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
        <div>
          <p class="text-gray-500">Total Balance</p>
          <div class="mt-1 flex items-end gap-2">
            <span class="text-4xl sm:text-5xl font-extrabold tracking-tight">0.00$</span>
          </div>
          <p class="mt-1 text-sm text-gray-400">‚Äî % (0.00 $)</p>
        </div>

        <!-- Segmented range -->
        <div class="flex items-center gap-2">
          <% ["All","1Y","3M","1M","2W","1W"].each do |r| %>
            <% active = (r == "2W") %>
            <button class="<%= active ? 'btn-chip--active' : 'btn-chip' %>"><%= r %></button>
          <% end %>
        </div>
      </div>

      <!-- Chart + scrubber placeholders -->
      <div class="mt-6 h-44 rounded-lg bg-gradient-to-b from-gray-50 to-white"></div>
      <div class="mt-3 h-6 rounded bg-indigo-100/60"></div>
    </section>

    <!-- Three cards row -->
   <section class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <% [
    ["Exchange Balances","Add an exchange"],
    ["Blockchain Balances","Add blockchain address"],
    ["Manual Balances","Add a manual balance"]
  ].each do |title,cta| %>
    <div class="rounded-2xl bg-white border border-gray-200 shadow-sm hover:shadow-lg transition-shadow duration-200 p-6">
      <div class="flex items-center justify-between">
        <h3 class="text-base font-semibold text-gray-900"><%= title %></h3>
        <button class="rounded-full p-2 hover:bg-gray-100 transition" title="Sync">
          <svg class="h-4 w-4 text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6"
                  d="M4 4v6h6M20 20v-6h-6M20 8a8 8 0 00-15.5-2M4 16a8 8 0 0015.5 2"/>
          </svg>
        </button>
      </div>
      <div class="mt-8 flex justify-center">
        <button class="inline-flex items-center gap-2 rounded-full border border-indigo-200 px-4 py-2 text-indigo-700 hover:bg-indigo-50 transition">
          <span class="text-lg">Ôºã</span> <%= cta %>
        </button>
      </div>
    </div>
  <% end %>
</section>

    <!-- Assets section -->
    <section class="rounded-2xl bg-white border border-gray-200 shadow-sm hover:shadow-md transition">
      <div class="flex items-center justify-between p-5">
        <h3 class="text-base font-semibold">Assets</h3>
        <div class="flex items-center gap-3">
          <div class="hidden sm:flex items-center rounded-lg border px-3 py-1.5">
            <svg class="h-4 w-4 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <circle cx="11" cy="11" r="7" stroke-width="1.6"/><path d="M21 21l-4.3-4.3" stroke-width="1.6" stroke-linecap="round"/>
            </svg>
            <input placeholder="Search" class="ml-2 w-56 border-0 p-0 text-sm text-gray-700 placeholder-gray-400 focus:ring-0" />
          </div>
          <button class="btn-chip">Refresh Prices</button>
        </div>
      </div>
      <div class="p-5">
        <div class="grid place-items-center py-10 text-gray-400">
          <div class="h-16 w-16 rounded-full border grid place-items-center mb-2">üßä</div>
          <p class="text-sm">No data available</p>
        </div>
      </div>
    </section>

    <!-- NFT Balances section -->
    <section class="rounded-2xl bg-white border border-gray-200 shadow-sm hover:shadow-md transition">
      <div class="flex items-center justify-between p-5">
        <h3 class="text-base font-semibold">NFT Balances</h3>
      </div>
      <div class="p-5">
        <div class="grid place-items-center py-10 text-gray-400">
          <div class="h-16 w-16 rounded-full border grid place-items-center mb-2">üñºÔ∏è</div>
          <p class="text-sm">No data available</p>
        </div>
      </div>
    </section>

  </div>
</main>
